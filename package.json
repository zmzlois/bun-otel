{
  "name": "bun-otel-workspace",
  "description": "Monorepo for OpenTelemetry instrumentation in Bun runtime.",
  "module": "packages/index.ts",
  "type": "module",
  "scripts": {
    "setup": "bun run setup.ts",
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter 'bun-otel*' build",
    "test": "bun test",
    "lint": "eslint . -c config/eslint.config.js --max-warnings 10",
    "lint:fix": "eslint . -c config/eslint.config.js --fix",
    "format": "prettier --write . --config config/.prettierrc.json",
    "format:check": "prettier --check . --config config/.prettierrc.json",
    "typecheck": "tsc --build config/tsconfig.json",
    "check": "bun run typecheck && bun run lint && bun run format:check",
    "bun-server": "bun run --filter bun-server dev",
    "reporting-service": "bun run --filter reporting-service dev",
    "elysia": "bun run --filter elysia dev",
    "changelog": "changelogen --output CHANGELOG.md",
    "changelog:preview": "changelogen",
    "changelog:bump": "changelogen --bump",
    "release": "changelogen --release",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write --config config/.prettierrc.json",
      "eslint --fix -c config/eslint.config.js"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write --config config/.prettierrc.json"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/bun": "latest",
    "@types/eslint__js": "^8.42.3",
    "changelogen": "^0.6.2",
    "eslint": "^9.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.3",
    "typescript-eslint": "^8.14.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "package/*",
    "examples/*"
  ],
  "overrides": {
    "elysia": "^1.4.18"
  }
}
